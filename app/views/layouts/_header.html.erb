<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Microposts", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.home"), root_path %></li>
        <li><%= link_to t("views.help"),   '#' %></li>
        
        <% if logged_in? %>
        
          <li><%= link_to t("views.users"), "#" %></li>
          <li class="dropdown">
            
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("views.account") %> <b class="caret"></b>
            </a>
            
            <ul class="dropdown-menu">
              <li><%= link_to t("views.profile"), current_user %></li>
              <li><%= link_to t("views.setting"), edit_user_path(current_user) %></li>
              <li><%= link_to t("views.followings"), following_user_path(current_user) %></li>
              <li><%= link_to t("views.followers"), followers_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.Log out"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          
        <% else %>
          <li><%= link_to t("views.Log in"), login_path %></li>
        
        <% end %>

      </ul>
    </nav>
  </div>
</header>