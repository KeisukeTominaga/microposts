<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  

  <div class="col-md-10">

    <h3 class="col-xs-offset-1">Followers(<%= @follower.count %>)</h3>
      <div class="container-fluid">
        <div class="row">
          <% @follower.each do |f| %>
            <div class="col-xs-10 col-sm-6 col-md-2" style="margin:20px"><%= link_to gravatar_for(f, size: 160), f %><br>
            <%= link_to f.name, f %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
  
</div>
  
  

  
  

