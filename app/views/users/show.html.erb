<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if current_user == @user %>
      <%= link_to "Edit your account", edit_user_path(@user), class: "btn btn-large btn-primary same-as-form" %>
      <%= link_to "Delete your account", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-large btn-primary same-as-form" %>
    <% end %>
  </div>
</div>
