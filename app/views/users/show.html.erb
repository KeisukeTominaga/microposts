<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
      <%= link_to "Update your account", edit_user_path(@user), class: "btn btn-large btn-primary same-as-form" %>
      <%= link_to "Delete your account", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-large btn-primary same-as-form" %>
    
  </div>
</div>